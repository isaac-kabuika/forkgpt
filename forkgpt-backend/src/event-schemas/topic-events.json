    "topic.delete": {
      "schema": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "userId": {
            "type": "string"
          },
          "accessToken": {
            "type": "string"
          }
        },
        "required": ["id", "userId", "accessToken"],
        "additionalProperties": false
      }
    },
    "topic.deleted": {
      "schema": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "userId": {
            "type": "string"
          }
        },
        "required": ["id", "userId"],
        "additionalProperties": false
      }
